+import { createContext, ReactNode, useContext, useMemo, useState } from 'react';
+import { Pigeon } from '../types/pigeon';
+
+interface PigeonsContextValue {
+  localPigeons: Pigeon[];
+  addPigeon: (pigeon: Pigeon) => void;
+}
+
+const PigeonsContext = createContext<PigeonsContextValue | undefined>(undefined);
+
+interface PigeonsProviderProps {
+  children: ReactNode;
+}
+
+export function PigeonsProvider({ children }: PigeonsProviderProps) {
+  const [localPigeons, setLocalPigeons] = useState<Pigeon[]>([]);
+
+  const addPigeon = (pigeon: Pigeon) => {
+    setLocalPigeons((prev) => {
+      const existingIndex = prev.findIndex(
+        (item) => item.numero === pigeon.numero,
+      );
+      if (existingIndex >= 0) {
+        const next = [...prev];
+        next[existingIndex] = pigeon;
+        return next;
+      }
+      return [pigeon, ...prev];
+    });
+  };
+
+  const value = useMemo(() => ({ localPigeons, addPigeon }), [localPigeons]);
+
+  return (
+    <PigeonsContext.Provider value={value}>
+      {children}
+    </PigeonsContext.Provider>
+  );
+}
+
+export function usePigeonsStore() {
+  const context = useContext(PigeonsContext);
+  if (!context) {
+    throw new Error('usePigeonsStore must be used within PigeonsProvider');
+  }
+  return context;
+}
