+import Papa from 'papaparse';
+import { Pigeon } from '../types/pigeon';
+import { createFallbackNumero, isValidUrl } from '../utils/validators';
+
+const DEFAULT_SHEET_ID = '1JZcjjdxGi-jUV_eedQebsRWsaVVwQMmyRUPesvIfQ0E';
+const DEFAULT_SHEET_NAME = 'Hoja 1';
+
+export const SHEET_HEADERS = {
+  nombre: 'Nombre',
+  numero: 'Numero',
+  color: 'Color',
+  descripcion: 'Descripcion',
+  padre: 'Padre',
+  madre: 'Madre',
+  fechaNacimiento: 'Fecha de nacimiento',
+  fechaLlegada: 'Fecha de llegada',
+  tipo: 'Tipo(Local o rescatada)',
+  estado: 'Estado(en palomar, desaparecida, fallecida)',
+  foto: 'Foto',
+} as const;
+
+export function buildSheetUrl(sheetId: string, sheetName: string) {
+  const encodedSheet = encodeURIComponent(sheetName);
+  return `https://docs.google.com/spreadsheets/d/${sheetId}/gviz/tq?tqx=out:csv&sheet=${encodedSheet}`;
+}
+
+export function getSheetConfig() {
+  const sheetId = import.meta.env.VITE_SHEET_ID || DEFAULT_SHEET_ID;
+  const sheetName = import.meta.env.VITE_SHEET_NAME || DEFAULT_SHEET_NAME;
+  return { sheetId, sheetName };
+}
+
+export async function fetchCsv() {
+  const { sheetId, sheetName } = getSheetConfig();
+  const url = buildSheetUrl(sheetId, sheetName);
+  const response = await fetch(url);
+  if (!response.ok) {
+    throw new Error('No se pudo cargar la hoja de cálculo.');
+  }
+  return response.text();
+}
+
+export function parseCsv(text: string) {
+  return Papa.parse<Record<string, string>>(text, {
+    header: true,
+    skipEmptyLines: true,
+  }).data;
+}
+
+export function mapRowsToPigeons(rows: Record<string, string>[]) {
+  return rows.map((row, index) => {
+    const numero = row[SHEET_HEADERS.numero]?.trim();
+    const fotoValue = row[SHEET_HEADERS.foto]?.trim();
+
+    return {
+      nombre: row[SHEET_HEADERS.nombre]?.trim() ?? '',
+      numero: numero || createFallbackNumero(row[SHEET_HEADERS.nombre], index),
+      color: row[SHEET_HEADERS.color]?.trim() || undefined,
+      descripcion: row[SHEET_HEADERS.descripcion]?.trim() || undefined,
+      padre: row[SHEET_HEADERS.padre]?.trim() || undefined,
+      madre: row[SHEET_HEADERS.madre]?.trim() || undefined,
+      fechaNacimiento:
+        row[SHEET_HEADERS.fechaNacimiento]?.trim() || undefined,
+      fechaLlegada: row[SHEET_HEADERS.fechaLlegada]?.trim() || undefined,
+      tipo: row[SHEET_HEADERS.tipo]?.trim() || undefined,
+      estado: row[SHEET_HEADERS.estado]?.trim() || undefined,
+      foto: fotoValue && isValidUrl(fotoValue) ? fotoValue : undefined,
+    } satisfies Pigeon;
+  });
+}
+
+export async function fetchPigeons() {
+  const csv = await fetchCsv();
+  const rows = parseCsv(csv);
+  return mapRowsToPigeons(rows).filter((pigeon) => pigeon.nombre);
+}
