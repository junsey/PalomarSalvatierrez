+import { Pigeon } from '../types/pigeon';
+
+export function resolvePigeonRef(value: string | undefined, pigeons: Pigeon[]) {
+  if (!value) return undefined;
+  const exactNumero = pigeons.find(
+    (pigeon) => pigeon.numero.toLowerCase() === value.toLowerCase(),
+  );
+  if (exactNumero) return exactNumero;
+
+  const byNombre = pigeons.find(
+    (pigeon) => pigeon.nombre.toLowerCase() === value.toLowerCase(),
+  );
+  return byNombre;
+}
