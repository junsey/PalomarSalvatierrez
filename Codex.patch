+export function isValidUrl(value: string) {
+  try {
+    // eslint-disable-next-line no-new
+    new URL(value);
+    return true;
+  } catch {
+    return false;
+  }
+}
+
+export function createFallbackNumero(nombre?: string, index?: number) {
+  const safeName = nombre?.toLowerCase().replace(/\s+/g, '-') || 'paloma';
+  return `${safeName}-${(index ?? 0) + 1}`;
+}
