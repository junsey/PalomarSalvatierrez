+import {
+  Button,
+  Dialog,
+  DialogActions,
+  DialogContent,
+  DialogTitle,
+  Grid,
+  MenuItem,
+  TextField,
+} from '@mui/material';
+import { zodResolver } from '@hookform/resolvers/zod';
+import { useForm } from 'react-hook-form';
+import { Pigeon } from '../types/pigeon';
+import { PIGEON_ESTADOS, PIGEON_TIPOS } from '../utils/constants';
+import { pigeonSchema, PigeonFormValues } from '../utils/pigeonSchema';
+
+interface PigeonFormDialogProps {
+  open: boolean;
+  onClose: () => void;
+  onSubmit: (pigeon: Pigeon) => void;
+}
+
+export function PigeonFormDialog({
+  open,
+  onClose,
+  onSubmit,
+}: PigeonFormDialogProps) {
+  const {
+    register,
+    handleSubmit,
+    formState: { errors },
+    reset,
+  } = useForm<PigeonFormValues>({
+    resolver: zodResolver(pigeonSchema),
+    defaultValues: {
+      nombre: '',
+      numero: '',
+      estado: '',
+      tipo: '',
+    },
+  });
+
+  const handleClose = () => {
+    reset();
+    onClose();
+  };
+
+  const submit = handleSubmit((values) => {
+    onSubmit({
+      nombre: values.nombre,
+      numero: values.numero,
+      color: values.color || undefined,
+      descripcion: values.descripcion || undefined,
+      padre: values.padre || undefined,
+      madre: values.madre || undefined,
+      fechaNacimiento: values.fechaNacimiento || undefined,
+      fechaLlegada: values.fechaLlegada || undefined,
+      tipo: values.tipo || undefined,
+      estado: values.estado || undefined,
+      foto: values.foto || undefined,
+    });
+    // TODO: Enviar cambios a Google Sheets cuando agreguemos escritura.
+    handleClose();
+  });
+
+  return (
+    <Dialog open={open} onClose={handleClose} fullWidth maxWidth="md">
+      <DialogTitle>Agregar/Editar paloma</DialogTitle>
+      <DialogContent sx={{ mt: 1 }}>
+        <Grid container spacing={2}>
+          <Grid item xs={12} sm={6}>
+            <TextField
+              label="Nombre"
+              fullWidth
+              required
+              {...register('nombre')}
+              error={Boolean(errors.nombre)}
+              helperText={errors.nombre?.message}
+            />
+          </Grid>
+          <Grid item xs={12} sm={6}>
+            <TextField
+              label="Número"
+              fullWidth
+              required
+              {...register('numero')}
+              error={Boolean(errors.numero)}
+              helperText={errors.numero?.message}
+            />
+          </Grid>
+          <Grid item xs={12} sm={6}>
+            <TextField label="Color" fullWidth {...register('color')} />
+          </Grid>
+          <Grid item xs={12} sm={6}>
+            <TextField label="Descripción" fullWidth {...register('descripcion')} />
+          </Grid>
+          <Grid item xs={12} sm={6}>
+            <TextField label="Padre" fullWidth {...register('padre')} />
+          </Grid>
+          <Grid item xs={12} sm={6}>
+            <TextField label="Madre" fullWidth {...register('madre')} />
+          </Grid>
+          <Grid item xs={12} sm={6}>
+            <TextField
+              label="Fecha de nacimiento"
+              fullWidth
+              {...register('fechaNacimiento')}
+              placeholder="AAAA-MM-DD"
+            />
+          </Grid>
+          <Grid item xs={12} sm={6}>
+            <TextField
+              label="Fecha de llegada"
+              fullWidth
+              {...register('fechaLlegada')}
+              placeholder="AAAA-MM-DD"
+            />
+          </Grid>
+          <Grid item xs={12} sm={6}>
+            <TextField
+              label="Tipo"
+              select
+              fullWidth
+              {...register('tipo')}
+              helperText={errors.tipo?.message || 'Selecciona el tipo de paloma'}
+              error={Boolean(errors.tipo)}
+            >
+              <MenuItem value="">Sin definir</MenuItem>
+              {PIGEON_TIPOS.map((option) => (
+                <MenuItem key={option} value={option}>
+                  {option}
+                </MenuItem>
+              ))}
+            </TextField>
+          </Grid>
+          <Grid item xs={12} sm={6}>
+            <TextField
+              label="Estado"
+              select
+              fullWidth
+              {...register('estado')}
+              helperText={errors.estado?.message || 'Selecciona el estado actual'}
+              error={Boolean(errors.estado)}
+            >
+              <MenuItem value="">Sin definir</MenuItem>
+              {PIGEON_ESTADOS.map((option) => (
+                <MenuItem key={option} value={option}>
+                  {option}
+                </MenuItem>
+              ))}
            </TextField>
+          </Grid>
+          <Grid item xs={12}>
+            <TextField
+              label="Foto (URL)"
+              fullWidth
+              {...register('foto')}
+              error={Boolean(errors.foto)}
+              helperText={errors.foto?.message}
+            />
+          </Grid>
+        </Grid>
+      </DialogContent>
+      <DialogActions>
+        <Button onClick={handleClose}>Cancelar</Button>
+        <Button variant="contained" onClick={submit}>
+          Guardar
+        </Button>
+      </DialogActions>
+    </Dialog>
+  );
+}
